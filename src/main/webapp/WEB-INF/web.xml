<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
	id="WebApp_ID" version="5.0">
	<display-name>Sklep</display-name>
	<context-param>
		<param-name>jakarta.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
            <servlet-name>Faces Servlet</servlet-name>
            <url-pattern>*.jsf</url-pattern>
            <url-pattern>*.xhtml</url-pattern>
        </servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsf</welcome-file>
	</welcome-file-list>
	<mime-mapping>
		<extension>ico</extension>
		<mime-type>image/x-icon</mime-type>
	</mime-mapping>









	<filter>
        <filter-name>SecurityFilter</filter-name>
    
        <filter-class>jakarta.faces.simplesecurity.SecurityFilter</filter-class>
    
        <init-param>
            <param-name>noPermitionPage</param-name>
            <param-value>/login.xhtml</param-value>
        </init-param>
    
        <init-param>
            <param-name>permissions</param-name>
            <param-value>
                /jakarta.faces.resource : PUBLIC;
                / : PUBLIC;
                /index.xhtml : PUBLIC;
                /login.xhtml : PUBLIC;
                /info.xhtml : 1, 2;
            </param-value>
        </init-param>
    
        <init-param>
            <param-name>invalidateOnRemoteAddressChange</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>invalidateOnRemoteHostChange</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>invalidateOnRemotePortChange</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
  
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>